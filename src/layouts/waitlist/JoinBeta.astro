---
import { ChevronRight } from "@lucide/astro";
import Team from "../../components/icons/Team.astro";
---

<section id="Beta" class="flex flex-col items-center px-4 py-6 space-y-4 md:py-12 md:space-y-8 feature-bg">
  <div class="text-center mb-0 font-medium">
    <p>Join the Beta</p>
  </div>

  <div class="text-center max-w-[1535px]">
    <p class="text-4xl font-normal tracking-[-1.5px]">Be among the first to get early access to Openlane.</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-8 max-w-[1535px]">
    <div class="flex items-center justify-center p-[10px] px-[5px] w-full sm:p-[25px] sm:px-[34px] text-lg font-normal leading-7 text-center rounded-lg bg-subbg-4 sm:w-[307.5px]">
      <p>Audit programs for SOC 2, ISO 27001, NIST 800-53, and custom frameworks</p>
    </div>
    <div class="flex items-center justify-center p-[10px] px-[5px] w-full sm:p-[25px] sm:px-[34px] text-lg font-normal leading-7 text-center rounded-lg bg-subbg-4 sm:w-[307.5px]">
      <p>Versioned policy management with approval flows</p>
    </div>
    <div class="flex items-center justify-center p-[10px] px-[5px] w-full sm:p-[25px] sm:px-[34px] text-lg font-normal leading-7 text-center rounded-lg bg-subbg-4 sm:w-[307.5px]">
      <p>Evidence uploads linked to controls with audit trails.</p>
    </div>
    <div class="flex items-center justify-center p-[10px] px-[5px] w-full sm:p-[25px] sm:px-[34px] text-lg font-normal leading-7 text-center rounded-lg bg-subbg-4 sm:w-[307.5px]">
      <p>Built-in risk management with scoring, tracking, and control mapping</p>
    </div>
  </div>

  <div class="mt-1 flex flex-col items-center gap-4">
    <p class="text-sm text-center">Spots are limited — join the waitlist today.</p>
    <a
      href="https://getopenlane.io/"
      target="_blank"
      class="px-6 py-2 border-2 rounded-full border-brand-400 flex items-center gap-2 font-medium text-base cursor-pointer group/feedback hover:border-primary transition-all duration-300"
    >
      <span class="group-hover/feedback:!text-(--color-primary) transition-all duration-300"> Join the waitlist </span>
      <ChevronRight class="w-4 h-4 group-hover/feedback:!text-(--color-primary) transition-all duration-300" />
    </a>
  </div>
</section>

<section class="flex flex-col items-center px-4 pt-2 pb-6 space-y-2 md:space-y-8 bg-slate-50">
  <div class="text-center mb-0 font-medium mt-10">
    <p>Get Involved</p>
  </div>
  <div class="text-center max-w-[1535px]">
    <p class="text-4xl font-normal tracking-[-1.5px]">The future of compliance is developer friendly</p>
  </div>

  <div class="max-w-7xl pl-0 md:pl-6 mx-auto grid grid-cols-1 lg:grid-cols-12 gap-0 md:gap-12 items-stretch mt-10">
    <div class="lg:col-span-6 h-full flex flex-col">
      <Team />

      <p class="text-lg font-normal leading-7 mb-2 md:mb-6 tracking-[-0.6px] text-color mt-2 md:mt-5">
        If you’re still stuck in spreadsheets, it’s time to join us in the pipeline. We'd love to hear from you.
      </p>
    </div>

    <div class="lg:col-span-6 h-full flex flex-col">
      <div class="mt-5">
        <form method="POST" id="contact-form">
          <div class="mb-4">
            <label class="block text-color text-sm mb-1" for="name">Name</label>
            <input
              name="name"
              id="name"
              type="text"
              placeholder="The person behind the audit panic"
              class="w-full px-3 py-2 bg-card border border-input text-color rounded-md focus:outline-none focus:border-input"
            />
            <p class="text-xs text-color-primary hidden" data-error-for="name">Name is required.</p>
          </div>

          <div class="mb-4">
            <label class="block text-color text-sm mb-1" for="email">Email</label>
            <input
              name="email"
              id="email"
              type="email"
              placeholder="sos@spreadsheetburnout.org"
              class="w-full px-3 py-2 bg-card border border-input text-color rounded-md focus:outline-none focus:border-input"
            />
            <p class="text-xs text-color-primary hidden" data-error-for="email">Email is required.</p>
          </div>

          <div>
            <label class="block text-color text-sm mb-1" for="message">Message</label>
            <textarea
              name="message"
              id="message"
              rows="5"
              placeholder="Beta curiosity? Investor questions? Sarbanes jokes? We’re listening."
              class="w-full px-3 py-2 bg-card border border-input text-color rounded-md resize-none focus:outline-none focus:border-input"></textarea>
            <p class="text-xs text-color-primary hidden" data-error-for="message">Message is required.</p>
          </div>

          <button
            id="submit-btn"
            type="submit"
            class="px-4 py-2 border-2 inline-flex rounded-full border-brand-400 items-center gap-2 font-medium text-base cursor-pointer group/feedback hover:border-primary transition-all duration-300"
          >
            <span class="text-sm group-hover/feedback:!text-(--color-primary) transition-all duration-300">
              <span class="default-text">Send Message</span>
              <span class="loading-text hidden">Sending...</span>
            </span>
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { MotionPathPlugin } from "gsap/MotionPathPlugin";
  import { CSSPlugin } from "gsap/CSSPlugin";
  import { actions } from "astro:actions";

  // Random placeholder messages for the textarea
  // cause we all need a laugh when filling out forms
  // and who doesn't love a good SOX joke?

  const messages = [
    "What kind of SOX are you wearing today?",
    "Seen one too many GRC spreadsheets? We feel you.",
    "Beta curiosity? Investor questions? Sarbanes jokes? We’re listening.",
    "Got a compliance horror story, tell us about it?",
    "Drop us a line—compliance questions, investor vibes, or existential dread welcome",
    "Talk to us like we’re your favorite auditor",
    "Ask us anything (but preferably about Openlane)",
    "Let us know how you'd like to kick off—Beta access or backing us like it's Q4 2001",
  ];

  const textarea = document.getElementById("message");
  const random = messages[Math.floor(Math.random() * messages.length)];
  if (textarea) {
    textarea.placeholder = random;
  }

  gsap.registerPlugin(ScrollTrigger, MotionPathPlugin, CSSPlugin);
  document.addEventListener("astro:page-load", () => {
    const form = document.getElementById("contact-form");
    const button = document.getElementById("submit-btn");
    const loadingText = button.querySelector(".loading-text");
    const defaultText = button.querySelector(".default-text");
    const toastContainer = document.getElementById("toast-container");
    const toastIcons = {
      success: document.getElementById("toast-icon-success").innerHTML,
      error: document.getElementById("toast-icon-error").innerHTML,
    };

    function showToast(message, type = "success") {
      const toast = document.createElement("div");

      toast.className = `
        flex items-center gap-3 px-4 py-3 rounded-lg border shadow-lg w-full max-w-sm
        ${type === "success" ? "bg-card border-brand-400 text-color-primary" : "bg-card border-color-fail text-color-primary"}
        animate-slide-in
      `;

      toast.innerHTML = `
        <div class="icon w-5 h-5 shrink-0">${toastIcons[type]}</div>
        <span class="flex-1 text-sm font-medium">${message}</span>
      `;
      toastContainer.appendChild(toast);
      setTimeout(() => {
        toast.classList.add("opacity-0", "translate-y-2");
        setTimeout(() => toast.remove(), 300);
      }, 5000);
    }

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      let valid = true;

      ["name", "email", "message"].forEach((fieldName) => {
        const input = form.querySelector(`[name="${fieldName}"]`);
        const error = form.querySelector(`[data-error-for="${fieldName}"]`);
        if (!input.value.trim()) {
          error.classList.remove("hidden");
          valid = false;
        } else {
          error.classList.add("hidden");
        }
      });

      if (!valid) {
        return;
      }

      button.disabled = true;
      defaultText.classList.add("hidden");
      loadingText.classList.remove("hidden");

      const formData = new FormData(form);

      try {
        const res = await fetch(actions.send, {
          method: "POST",
          body: formData,
        });

        if (!res.ok) {
          throw new Error("Request failed");
        }

        showToast("Message sent! We'll be in touch.", "success");
        form.reset();
      } catch (err) {
        console.error(err);
        showToast("Something went wrong. Please try again.", "error");
      } finally {
        button.disabled = false;
        defaultText.classList.remove("hidden");
        loadingText.classList.add("hidden");
      }
    });

    if (window.innerWidth < 768) {
      return;
    }

    const canvas = document.createElement("canvas");
    canvas.style.cssText = "position:fixed;top:0;left:0;width:100%;height:100%;pointer-events:none;z-index:-1";
    document.body.appendChild(canvas);
    const ctx = canvas.getContext("2d");
    let w,
      h,
      particles = [];

    const onResize = () => {
      w = canvas.width = window.innerWidth;
      h = canvas.height = window.innerHeight;
    };
    window.addEventListener("resize", onResize);
    onResize();

    function initParticles() {
      particles = Array.from({ length: 60 }, () => ({
        x: Math.random() * w,
        y: Math.random() * h,
        r: Math.random() * 2 + 0.5,
        alpha: Math.random() * 0.5 + 0.2,
        vx: (Math.random() - 0.5) * 0.3,
        vy: (Math.random() - 0.5) * 0.3,
      }));
    }
    initParticles();

    function draw() {
      ctx.clearRect(0, 0, w, h);
      particles.forEach((p) => {
        p.x = (p.x + p.vx + w) % w;
        p.y = (p.y + p.vy + h) % h;
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
        ctx.fillStyle = `#2ccbab`;
        ctx.fill();
      });
      requestAnimationFrame(draw);
    }
    draw();
  });
</script>
